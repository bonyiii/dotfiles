#synclient AreaTopEdge=300

synclient PalmMinWidth=8
synclient EmulateTwoFingerMinW=6
# Ez is nagyon fontos, hogy milyen nyomástól kezdje el két újasként érzékelni ha csak felette lebeg a tenyére akor ne ugráljon
synclient EmulateTwoFingerMinZ=250
# Szerintem ezek voltak a legfontosabbak
synclient PalmDetect=1
synclient PalmMinZ=20

synclient RTCornerButton=0
synclient RBCornerButton=0
